<% translation_scope = "views.shared.frontend.sidebar" %>

<div class="columns small-12 medium-4 large-4 topper" id="right-side">
  
  <% unless current_user.nil? %>
    <div id='user' class="panel">
      <h3><%= current_user.nil? ? I18n.t('views.shared.frontend.sidebar.welcome') : current_user.name %></h3>
      <%= render 'user' %>
    </div>
  <% end %>
  
  <div id='lenk_importante' class="panel">
    <h3><%= t :important_links, scope: translation_scope %></h3>
    <%= render 'lenk' %>
  </div>
  <% if 1 == 0 %>
  <div id='glosario' class="panel">
    <h3><%= t :glossaries, scope: translation_scope %></h3>
      <%= render 'glosario' %>
    </div>
  <% end %>
  
  <div id='palabra_mas_resien' class="panel">
    <h3><%= t :recent_words, scope: translation_scope %></h3>
    <%= render 'palabra_mas_resien' %>
  </div>
  
  <div id='palabra_mas_mira' class="panel">
    <h3><%= t :most_viewed_words, scope: translation_scope %></h3>
    <%= render 'palabra_mas_mira' %>
  </div>
</div>
