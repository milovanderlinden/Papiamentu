<%= form_tag '/palabra', method: :post do %>
  <div class="row">
    <div class="column large-6 medium-6 small-9 text-left">
      <%= text_field_tag :word, nil, placeholder: I18n.t("views.shared.frontend.word_search") %>
    </div>
    <div class="column large-6 medium-6 small-3 text-left">
      <%= submit_tag I18n.t('views.shared.buttons.search'), class: 'button search_form_button' %>
    </div>
  </div>
<% end %>
